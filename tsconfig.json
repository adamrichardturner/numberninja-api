{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "types": ["jest", "node"]
    },
    "include": ["src/**/*.ts", "src/__tests__/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
